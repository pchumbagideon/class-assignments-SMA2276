#include <iostream>

int main() {
    int num1, num2, result;
    char op;

    std::cout << "Enter the first number: ";
    std::cin >> num1;

    std::cout << "Enter the operator (+ or -): ";
    std::cin >> op;

    std::cout << "Enter the second number: ";
    std::cin >> num2;

    if (op == '+') {
        result = num1 + num2;
        std::cout << num1 << " + " << num2 << " = " << result << std::endl;
    } else if (op == '-') {
        result = num1 - num2;
        std::cout << num1 << " - " << num2 << " = " << result << std::endl;
    } else {
        std::cout << "Invalid operator." << std::endl;
    }

    return 0;
}
